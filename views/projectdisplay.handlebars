<div class="row">
        <div class= "col-sm-12">
        <h1>Project Starter<a id="login" href="#">Login</a>
        </h1>
        </div>
    </div>

    <div class= "row">
        <div class= "col-sm-12">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class= "container" id= "navigation">
            <a class="navbar-brand" href="#">Navbar</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
              <ul class="navbar-nav">
                <li class="nav-item active">
                  <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="#">Features</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="#">Pricing</a>
                </li>
              </ul>
              <select id="category" class="custom-select">
                    <option selected>Project Category</option>
                    <option value="1">electronics</option>
                    <option value="2">Games</option>
                    <option value="3">Children Toys</option>
                </select>
            </div>
            </div>
          </nav>
          </div>
          <!-- closes column -->
          </div>
          <!-- closes div row -->

          <br><br>

          <div class= "container">
              <div class= "row">
                <div class= "col-sm-3">
                    <div class="card" style="width: 17rem;">
                        <img class="card-img-top" src="{{photoImg}}" alt="Card image cap">
                            <div class="card-body">
                                <p class="card-text">{{photoDesc}}</p>
                            </div>
                        </div>
                </div> <!-- close column-->
                <div class= "col-sm-9">
                        <div class="jumbotron">
                                <h1 class="display-4">{{title}}</h1>
                                <p class="lead">{{shortDesc}}</p>
                                <hr class="my-4">
                                <p>{{bio}}</p>
                                <!-- Button trigger modal -->
                                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
                                        Click here to donate!
                                    </button>
                                    
                                    <!-- Modal -->
                                    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                        <div class="modal-dialog modal-dialog-centered" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalCenterTitle">Donation</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                            </div>
                                            <br>
                                            <div class="modal-body">
                                            How much would you like to donate?
                                            </div>
                                            <div class="input-group mb-3">
                                                    <div class="input-group-prepend">
                                                      <span class="input-group-text">$</span>
                                                    </div>
                                                    <input type="text" class="form-control" aria-label="Dollar amount (with dot and two decimal places)">
                                                  </div>
                                            <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                            <button type="button" class="btn btn-primary">Save changes</button>
                                            </div>
                                        </div>
                                        </div>
                                    </div>
                              </div>
                    </div> <!-- closes column -->
                  </div> <!-- closes div row -->

                  <br>

                  <div class= "row">
                        <div class="col-sm-6">
                                <div class="card">
                                  <div class="card-body">
                                    <h5 class="card-title">Donators</h5>
                                    <ul class="list-group" id= "donations">
                                    {{#each donations}}
                                    <li class="list-group-item">{{this.user.firsName}} {{this.user.lastName}}: <div class = 'green'>{{this.amount}}</div></li>
                                    {{/each}}
                                    </ul>
                                    <br>
                                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
                                        Click here to donate!
                                    </button>
                                    
                                    <!-- Modal -->
                                    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                        <div class="modal-dialog modal-dialog-centered" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalCenterTitle">Donation</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                            </div>
                                            <br>
                                            <div class="modal-body">
                                            How much would you like to donate?
                                            </div>
                                            <div class="input-group mb-3">
                                                    <div class="input-group-prepend">
                                                        <span class="input-group-text">$</span>
                                                    </div>
                                                    <input type="text" class="form-control" aria-label="Dollar amount (with dot and two decimal places)">
                                                    </div>
                                            <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                            <button type="button" class="btn btn-primary">Save changes</button>
                                            </div>
                                        </div>
                                        </div>
                                    </div>
                                  </div>
                                </div>
                              </div>
                              <div class="col-sm-6">
                                <h2>Related rojects:</h2>
                                    {{#each projects}}
                                    <div class="card" style="width: 18rem; float: left;">
                                        <img class="card-img-top" src = '{{this.image}}'>
                                        <div class="card-body">
                                            <h5 class="card-title">{{this.title}}</h5>
                                            <h6 class="card-subtitle mb-2 text-muted">Total raised: <div class = 'green'>{{this.total}}</h6>
                                            
                                            <a href="/projects/{{this.id}}" class="card-link">Link</a>
                                        </div>
                                    </div>
                                    {{/each}}
                              </div>
                            </div><!-- closes row-->
                            </div> <!-- close column-->
                  </div> <!--closes conatiner-->



          </div> <!-- closes container -->








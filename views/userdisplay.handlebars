
    <!--headings  -->

    <div class="row">
        <h1>User Profile
             <a class="nv" href="/home">Home</a>
             <a class="nv" href="/user/create">New Project</a>
             <a class="nv" href="/logout">Logout</a>
        </h1>
    </div>



    <!-- Image -->
    <div class="container">
        <div class="row">
            
            <div class = "col">
                <h2>{{firstName}} {{lastName}}</h2>
                <div class="jumbotron">
                    <p class="lead">{{bio}}</p>
                    <hr class="my-4">
                    <p>{{interests}}</p>
                    <img src = '{{profileImg}}'>
                </div>
            </div>

        
            
            <div class = "col">
                <h2>Donations:</h2>
        
                <ul class="list-group"style="width: 70%;">
                    {{#each donations}}
                    <li class="list-group-item">{{this.project.title}}: <div class = 'green'>{{this.amount}}</div></li>
                    {{/each}}
                </ul>
            </div>

        </div>
        <div class="row">
        
            <div class = "col">
                <h2>Projects:</h2>
                {{#each projects}}
                <div class="card" style="width: 18rem; float: left;">
                    <img class="card-img-top" src = '{{this.image}}'>
                    <div class="card-body">
                        <h5 class="card-title">{{this.title}}</h5>
                        <h6 class="card-subtitle mb-2 text-muted">Total raised: <div class = 'green'>${{this.total}}</h6>
                        
                        <a href="/projects/{{this.id}}" class="card-link">Link</a>
                    </div>
                </div>
                {{/each}}
                
            </div>
           <button id="submit"  class="btn-info btn-lg pull-right">Create Project</button> 
        </div>
    
    </div> 
    
